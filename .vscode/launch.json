{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FGFS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Main/fgfs",
            "args": [
                "--dis=socket,in,10,255.255.255.255,3000,broadcast",
                "--site=1767",
                "--application=3534",
                "--ownship_id=4444",
                "--lat=31.13912981822674",
                "--lon=-97.71213774258472",
                "--heading=270",
                "--aircraft=ufo",
                "--timeofday=morning",
                // "--prop:/sim/frame_rate_throttle-hz=30",
                // "--prop://sim/max-sim-time-per-frame=0.0075",
                "--config=${workspaceFolder}/models.xml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/src/Main",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}