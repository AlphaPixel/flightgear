{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FGFS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/Main/fgfs",
            "args": [
                "--dis=socket,in,10,255.255.255.255,3000,broadcast",
                "--site=22317",
                "--application=44635",
                "--ownship_id=4444",
                "--lat=31.13912981822674",
                "--lon=-97.71213774258472",
                "--heading=270",
                "--aircraft=ufo",
                "--timeofday=morning",
                "--config=${workspaceFolder}/models.xml",
                "--multiplay=out,10,127.0.0.1,5000",
                "--multiplay=in,10,127.0.0.1,5001",
                "--data=${workspaceFolder}/ap",
                "--callsign=Debugger"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}